<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <import resource="classpath:dao-context.xml"/>

    <bean id="accountService" class="com.getjavajob.training.yakovleva.service.AccountService">
        <constructor-arg ref="accountDao"/>
        <constructor-arg ref="phoneDao"/>
    </bean>
    <bean id="phoneService" class="com.getjavajob.training.yakovleva.service.PhoneService">
        <constructor-arg ref="phoneDao"/>
    </bean>
    <bean id="applicationService" class="com.getjavajob.training.yakovleva.service.ApplicationService">
        <constructor-arg ref="applicationDao"/>
    </bean>

    <bean id="relationsService" class="com.getjavajob.training.yakovleva.service.RelationsService">
        <constructor-arg ref="relationsDao"/>
    </bean>
    <bean id="messageService" class="com.getjavajob.training.yakovleva.service.MessageService">
        <constructor-arg ref="messageDao"/>
    </bean>
    <bean id="groupService" class="com.getjavajob.training.yakovleva.service.GroupService">
        <constructor-arg ref="groupDao"/>
    </bean>

</beans>