<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Archetype Created Web com.getjavajob.training.yakovleva.dao.Application</display-name>
    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>com.getjavajob.training.yakovleva.web.utils.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.getjavajob.training.yakovleva.web.utils.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.FriendsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/jsp/AllAccounts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterAccount</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.RegisterAccount</servlet-class>
        <jsp-file>/jsp/RegistrationAccount.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterAccount</servlet-name>
        <url-pattern>/RegistrationAccount.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountPage</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountPage</servlet-class>
        <jsp-file>/jsp/main.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountPage</servlet-name>
        <url-pattern>/main.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountLogin</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountLogin</servlet-name>
        <url-pattern>/jsp/index.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountSettings</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountSettings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountSettings</servlet-name>
        <url-pattern>/jsp/myAccount.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountEditSettings</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountEditSettings</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountEditSettings</servlet-name>
        <url-pattern>/jsp/EditAccountSettings.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountGroup</servlet-name>
        <url-pattern>/jsp/AccountGroup.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountCreateGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountCreateGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountCreateGroup</servlet-name>
        <url-pattern>/jsp/CreateGroup.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountFriends</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountFriends</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountFriends</servlet-name>
        <url-pattern>/jsp/AccountFriends.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddFriendAccount</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AddFriendAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFriendAccount</servlet-name>
        <url-pattern>/jsp/AddFriendAccount.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountMessage</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountMessage</servlet-name>
        <url-pattern>/jsp/AccountMessage.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountFindGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountFindGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountFindGroup</servlet-name>
        <url-pattern>/jsp/AccountFindGroup.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountWriteMessage</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountWriteMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountWriteMessage</servlet-name>
        <url-pattern>/jsp/AccountWriteMessage.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.ShowGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowGroup</servlet-name>
        <url-pattern>/jsp/showGroup.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountLogout</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.AccountLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountLogout</servlet-name>
        <url-pattern>/jsp/AccountLogout.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowFriend</servlet-name>
        <servlet-class>com.getjavajob.training.yakovleva.web.ShowFriend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowFriend</servlet-name>
        <url-pattern>/jsp/ShowFriend.jsp</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <resource-ref>
        <description>DB</description>
        <res-ref-name>jdbc/socnetwork</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>