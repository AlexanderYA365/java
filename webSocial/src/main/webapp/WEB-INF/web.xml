<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Archetype Created Web Application</display-name>
    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>utils.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>FriendsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/AllAccounts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterAccount</servlet-name>
        <servlet-class>RegisterAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterAccount</servlet-name>
        <url-pattern>/Account.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountPage</servlet-name>
        <servlet-class>AccountPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountPage</servlet-name>
        <url-pattern>/main.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountLogin</servlet-name>
        <servlet-class>AccountLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountLogin</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

</web-app>